name: AI Auto Publish

on:
  workflow_dispatch:
  push:
    branches:
      - main
    paths:
      - 'static/ai_generated/**/*.json'
  schedule:
    - cron: '0 */6 * * *'  # 6시간마다 자동 실행

jobs:
  ai-generate:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          pip install --upgrade pip
          pip install torch transformers huggingface_hub

      - name: Run AI Auto Publish script
        run: |
          echo "AI Auto Publish test started at $(date)"
          ls static/ai_generated
          echo "[OK] Workflow structure verified"
