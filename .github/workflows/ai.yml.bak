name: AI Auto Merge (정석 완전판)

on:
  workflow_dispatch:
  schedule:
    - cron: '0 */3 * * *'     # 3시간마다 자동 실행
  push:
    branches: [ "main" ]

permissions:
  contents: write

jobs:
  ai-merge:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install Dependencies
        run: |
          pip install --upgrade pip
          pip install huggingface_hub transformers torch pandas

      - name: Run AI Merge Pipeline
        run: |
          set -e
          if [ -f "scripts/ai_merge.py" ]; then
            python scripts/ai_merge.py || true
          else
            echo "[INFO] ai_merge.py not found — skip merge."
          fi

          if [ -f "scripts/ctr_predict.py" ]; then
            python scripts/ctr_predict.py || true
          else
            echo "[INFO] ctr_predict.py not found — skip CTR predict."
          fi

          echo "[OK] AI 자동 발행 루프 실행 완료"

      - name: Commit & Push Results
        run: |
          git config --global user.name "AI Publisher"
          git config --global user.email "ai@idolab.dev"
          git add .
          git diff-index --quiet HEAD || git commit -m "auto: merged AI results from Colab"
          git push || echo "[INFO] No new changes to push."

      - name: Clean Exit
        run: |
          echo "[OK] AI 병합 단계 정상 종료"
          exit 0
